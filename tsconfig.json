{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist/cjs",
    "module": "commonjs",
    "noImplicitAny": true,
    "lib": ["es2017", "es7", "es6", "dom"],
    "moduleResolution": "node",
    "jsx": "react",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "sourceMap": true
  },
  "include": ["src/**/*", "test/jest-dom.d.ts"],
  "exclude": ["node_modules", "dist"]
}
